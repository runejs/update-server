{
    "name": "@runejs/update-server",
    "version": "1.3.1",
    "description": "RuneJS Game Update Server",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "rimraf lib && tsc",
        "clean": "rimraf lib",
        "lint": "biome lint",
        "lint:fix": "biome lint --write",
        "format": "biome format",
        "format:fix": "biome format --write",
        "fin": "npm run lint:fix && npm run format:fix",
        "start": "ts-node src/main.ts",
        "package": "rimraf lib && npm i && npm run build && npm publish --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/runejs/update-server.git"
    },
    "bugs": {
        "url": "https://github.com/runejs/update-server/issues"
    },
    "homepage": "https://github.com/runejs/update-server#readme",
    "author": "Kikorono",
    "license": "GPL-3.0",
    "peerDependencies": {
        "@runejs/common": "2.0.2-beta.3",
        "@runejs/filestore": "file:../rjs-filestore/lib",
        "tslib": "2.8.1",
        "typescript": "5.7.3"
    },
    "dependencies": {
        "@runejs/common": "2.0.2-beta.3",
        "@runejs/filestore": "file:../rjs-filestore/lib",
        "crc-32": "^1.2.2",
        "source-map-support": "^0.5.21",
        "tslib": "2.8.1"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/node": "^22.10.10",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "5.7.3"
    }
}
