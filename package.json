{
    "name": "@runejs/update-server",
    "version": "2.0.0-alpha.0",
    "description": "RuneJS Game Update Server",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "rimraf lib && tsc",
        "start": "ts-node-dev --max-old-space-size=1024 --respawn src/main.ts",
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --ext .ts src --fix",
        "package": "rimraf lib && npm i && npm run build && npm publish --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/runejs/update-server.git"
    },
    "bugs": {
        "url": "https://github.com/runejs/update-server/issues"
    },
    "homepage": "https://github.com/runejs/update-server#readme",
    "author": "Tynarus",
    "license": "GPL-3.0",
    "dependencies": {
        "@runejs/common": "2.0.0-rc.1",
        "@runejs/filestore": "file:../filestore",
        "crc-32": "^1.2.0",
        "source-map-support": "^0.5.19",
        "tslib": "^2.2.0"
    },
    "devDependencies": {
        "@runejs/eslint-config": "^1.0.0",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "eslint": "^7.32.0",
        "rimraf": "^3.0.2",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.2.4"
    },
    "eslintConfig": {
        "extends": [
            "@runejs/eslint-config"
        ],
        "parserOptions": {
            "project": "./tsconfig.json"
        }
    }
}
